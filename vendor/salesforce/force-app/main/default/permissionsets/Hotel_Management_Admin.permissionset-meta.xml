<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Full access to all Hotel Management custom objects. Assign to users who need to manage hotel operations.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Hotel Management Admin</label>

    <!-- Application Visibility -->
    <applicationVisibilities>
        <application>Dewy_Hotel_Management</application>
        <visible>true</visible>
    </applicationVisibilities>

    <!-- Custom Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Booking__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>

    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
