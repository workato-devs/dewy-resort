{
  "role": "manager",
  "servers": [
    {
      "name": "hotel-db",
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "lib/mcp/hotel-db-server.ts"]
    },
    {
      "name": "hotel-analytics",
      "type": "http",
      "url": "${MCP_ANALYTICS_URL}",
      "auth": {
        "type": "bearer",
        "token": "${MCP_ANALYTICS_TOKEN}"
      }
    },
    {
      "name": "hotel-operations",
      "type": "http",
      "url": "${MCP_OPERATIONS_URL}",
      "auth": {
        "type": "bearer",
        "token": "${MCP_OPERATIONS_TOKEN}"
      },
      "excludeTools": [
        "Create_booking",
        "Manage_bookings",
        "Submit_guest_service_request",
        "Submit_maintenance_request",
        "Create_contact_if_not_found"
      ]
    }
  ]
}
